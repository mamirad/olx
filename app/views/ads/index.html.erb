<p id="notice"><%= notice %></p>

<h1>Ads</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Sub category</th>
      <th>User</th>
      <th>Condition</th>
      <th>Detail</th>
      <th>City</th>
      <th>Address</th>
      <th>Published</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= ad.title %></td>
        <td><%= ad.category_id %></td>
        <td><%= ad.sub_category_id %></td>
        <td><%= ad.user_id %></td>
        <td><%= ad.condition %></td>
        <td><%= ad.detail %></td>
        <td><%= ad.city %></td>
        <td><%= ad.address %></td>
        <td><%= ad.published %></td>
        <td><%= ad.contact %></td>
        <td><%= link_to 'Bids', bid_path(ad) %></td>
        <td><%= link_to 'Show', ad %></td>
        <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
        <td><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ad', new_ad_path %>
